# Environment variables
NODE_ENV=development
PORT=3000

# Database configuration
# Para desenvolvimento (SQLite) - apenas defina o nome do arquivo
DB_DATABASE=data/development.sqlite

# Para produção (PostgreSQL) - descomente e configure:
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=password
# DB_DATABASE=bellspretty_prod
# DB_SSL=false

# JWT configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# API configuration
API_PREFIX=api